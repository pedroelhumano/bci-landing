---
interface Props {
  text: string;
  color: "orange" | "blue" | "green";
  href?: string;
}

const { href, text, color } = Astro.props;
---

<a href={href} class={`btn btn-block boton ${color} linkButton`}>
  {text}
</a>

<style>
  .linkButton {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    text-align: center;
    color: #e7e4e4;
    width: 300px;
    height: 90px;
  }

  .orange {
    background-color: #f73939;
    box-shadow: 0 9px #be1f20;
  }

  .blue {
    background-color: #0079bd;
    box-shadow: 0 9px #095e8e;
  }

  .green {
    background-color: #00a957;
    box-shadow: 0 8px #04763e;
  }
</style>
